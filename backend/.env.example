# ============================================
# Nisse / MatKompass Backend â€” Environment Variables
# ============================================

# Database
DATABASE_URL=postgresql://matkompass:password@localhost:5432/matkompass

# Redis
REDIS_URL=redis://localhost:6379

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-key-here

# JWT
JWT_SECRET=change-this-to-a-secure-random-string-at-least-32-chars
JWT_REFRESH_SECRET=another-secure-random-string-at-least-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Server
PORT=4000
NODE_ENV=development
# Include capacitor://localhost for iOS and http://localhost for Android native apps
CORS_ORIGIN=http://localhost:3000,capacitor://localhost,http://localhost

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RECIPE_SEARCH_LIMIT_PER_HOUR=10
RECIPE_SEARCH_LIMIT_PER_HOUR_PREMIUM=100

# Resend (Email)
RESEND_API_KEY=re_your_resend_api_key_here
EMAIL_FROM=Nisse <noreply@matkompass.se>

# Google OAuth (for Gmail sign-in)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Apple Sign-In
APPLE_CLIENT_ID=com.matkompass.app
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=

# Google Maps (for store locator)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
